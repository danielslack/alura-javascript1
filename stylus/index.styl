*
    box-sizing border-box

body
    font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, Helvetica, sans-serif
    font-size 14px

header 
    background-color #333
    height 3em
    color #ffffff
    margin-bottom 1em
    & h1
        font-size 2em
        display inline-block
        vertical-align middle
    & h2
        font-size 2em
        display inline-block
        vertical-align middle
    & .container:before
        content ''
        display inline-block
        height 100%
        vertical-align middle

.container
    width 60%
    height 100%
    margin 0 auto

section 
    margin 2em 0
    height 100%
    margin 0 auto
    & h2
        font-size 3em
        display block
        padding-bottom .5em
        border-bottom 1px solid #ccc
        margin-bottom .5em

table
    width 100%
    margin-bottom .5em
    table-layout fixed
td
th
    padding .7em
    margin 0
    border 1px solid #cccccc
    text-align center
th
    font-weight bold
    background-color #eee

label 
    color #555555
    display block
    margin-bottom .2em

.campo
    margin 0
    width 100%
    border 1px solid #cccccc
    padding: .7em

.campo-medio
    width 32%
    padding-right .5em

button 
    padding .5em 2em
    border 0
    border-bottom 3px solid 
    font-size 1.2em
    cursor pointer
    margin 0
    margin-top -3px
    color #fff
    background-color #0c8cd3
    border-color #04324c
    width 20%
    display block
    clear both
    margin 10px 0px
    & :active
        margin-top 0px
        border 0
button[disable=disable]
button:disabled
    background-color gray
    border-color darkgray 

.adicionar-paciente
    margin-top 30px

.campo-invalido
    border 1px solid red

.paciente-invalido
    background-color lightcoral

#mensagens-erro
    color red

.fade-out
    opacity 0
    transition 0.5s

#filter-table
    width 200px
    height 35px
    margin-bottom 10px

.invisivel
    display none